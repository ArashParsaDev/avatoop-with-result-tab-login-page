<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ava_toop_logo_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/iransans_bold"
        android:text="کد تایید ارسال شده را وارد کنید"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/et_getNumber_getCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/myedt"
        android:drawableRight="@drawable/ic_baseline_message_24"
        android:drawablePadding="5dp"
        android:gravity="right"
        android:hint="کد تایید را وارد کنید"
        android:inputType="number"
        android:maxLength="11"
        android:layoutDirection="rtl"
        android:fontFamily="@font/iransans_light"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_getNumber_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/mybtn1"
        android:fontFamily="@font/iransans_bold"
        android:text="تایید"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_getNumber_textCountTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:text="60"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_getNumber_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ارسال مجدد"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/mybtn2"
        android:textSize="18sp"
        android:fontFamily="@font/iransans_bold"
        android:visibility="gone"
        />








</LinearLayout>