<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_games_table"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="6dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:padding="8dp"
        android:layoutDirection="rtl">

        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/iv_game_table_icon_league"
                android:layout_height="35dp"
                android:layout_width="35dp"
                tools:src="@mipmap/ic_launcher_round"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="leage1"
            android:layout_gravity="center"
            />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_game_table_team1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="team1"


                />
            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:id="@+id/iv_game_table_icon_team1"
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    tools:src="@mipmap/ic_launcher_round"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_game_table_time_game1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="21:30"
                android:layout_gravity="center"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">
                <ImageView
                    android:id="@+id/iv_game_table_icon_team2"
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    tools:src="@mipmap/ic_launcher_round"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tv_game_table_team2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="team2"


                />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tv_game_table_team3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="team3"


                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/iv_game_table_icon_team3"
                        android:layout_height="35dp"
                        android:layout_width="35dp"
                        tools:src="@mipmap/ic_launcher_round"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_game_table_time_game2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="21:30"
                    android:layout_gravity="center"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:cardCornerRadius="8dp"
                    android:layout_margin="5dp"
                    android:elevation="10dp">
                    <ImageView
                        android:id="@+id/iv_game_table_icon_team4"
                        android:layout_height="35dp"
                        android:layout_width="35dp"
                        tools:src="@mipmap/ic_launcher_round"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_game_table_team4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="team4"
                    />
            </LinearLayout>



        </LinearLayout>
</androidx.cardview.widget.CardView>
</FrameLayout>