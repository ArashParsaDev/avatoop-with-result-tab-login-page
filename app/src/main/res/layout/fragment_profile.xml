<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:padding="12dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/profile"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

           <LinearLayout android:layout_height="wrap_content"
               android:layout_width="match_parent">


               <com.google.android.material.button.MaterialButton
                   android:id="@+id/btn_profile_log_in"
                   android:layout_width="0dp"
                   android:layout_weight="0.25"
                   android:layout_height="56dp"
                   android:layout_marginTop="20dp"
                   android:layout_marginRight="4dp"
                   android:fontFamily="@font/iransans_bold"
                   android:text="ورود"
                   android:textColor="@color/white"
                   android:textSize="16dp"
                   android:foreground="?android:attr/selectableItemBackground"
                   />

           </LinearLayout>

        </LinearLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="آوا توپ"
            android:textColor="@color/black"
            android:fontFamily="@font/iransans_bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/iransans_light"
            android:text="با اخبار هیجان انگیز و تازه دنیای فوتبال همراه باشید" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@color/gray"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            android:layout_margin="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >




                <Button
                    android:id="@+id/btn_profile_premium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="خرید اشتراک"
                    android:textSize="12dp"
                    app:icon="@drawable/ic_baseline_shopping_bag_24"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/iransans_bold"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:foreground="?android:attr/selectableItemBackground"
                    />


                <Button
                    android:id="@+id/btn_profile_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="علاقه مندی ها"
                    android:textSize="12dp"
                    android:fontFamily="@font/iransans_bold"
                    app:icon="@drawable/ic_baseline_shopping_bag_24"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:foreground="?android:attr/selectableItemBackground"
                    />

                <Button
                    android:id="@+id/btn_profile_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="درباره ما"
                    android:textSize="12dp"
                    android:fontFamily="@font/iransans_bold"
                    app:icon="@drawable/ic_baseline_info_24"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:foreground="?android:attr/selectableItemBackground"
                    />
                <Button
                    android:id="@+id/btn_profile_exit_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="خروج از اکانت"
                    android:textSize="12dp"
                    android:fontFamily="@font/iransans_bold"
                    app:icon="@drawable/ic_baseline_exit_to_app_24"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:foreground="?android:attr/selectableItemBackground"
                    />










            </LinearLayout>
        </androidx.cardview.widget.CardView>












    </LinearLayout>


</RelativeLayout>